<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="TextAppearance.Widget.ConversationCountBadge" parent="@android:style/TextAppearance.Small.Inverse">
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/conversation_badge</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="AvatarListItemStyle">
        <item name="android:layout_width">@dimen/avatar_size</item>
        <item name="android:layout_height">@dimen/avatar_size</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="AvatarListItemTextStyle" parent="android:TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_marginRight">5dip</item>
    </style>

    <style name="AvatarListItemSubtitleStyle" parent="android:TextAppearance.Small" />

    <style name="PinnedHeader">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:textAllCaps" tools:targetApi="ice_cream_sandwich">true</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pinned_header_text</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
