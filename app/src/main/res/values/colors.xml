<resources>
    <!-- application colors -->
    <color name="app_primary">#2196F3</color>
    <color name="app_primary_dark">#1976D2</color>
    <color name="app_accent">#03A9F4</color>

    <!-- Widget background -->
    <drawable name="light_blue_background">#ffecfbff</drawable>

	<drawable name="fill_incoming_background">#ffdb8e41</drawable>
	<drawable name="border_incoming_background">#ffcb7a28</drawable>
	<drawable name="fill_outgoing_background">#ff3d80dc</drawable>
	<drawable name="border_outgoing_background">#ff1859bb</drawable>

    <!-- text color -->
    <color name="text_color_draft">#ffff0000</color>

    <!-- other colors -->
    <color name="highlight_color">#fffffC57</color>

    <!-- compose message list view background -->
    <color name="compose_message_list_background">#fff5f8fa</color>
    <!-- grayed out text -->
    <color name="grayed_out">#ff999999</color>

    <color name="conversation_active_background">#ff229DC9</color>
    
    <!-- audio progress bar color -->
    <color name="audio_pbar_record">#ffdd1812</color>
    <color name="audio_pbar_play">#ff00acec</color>

    <color name="date_stamp_background">#ff33B5E5</color>
    <color name="date_stamp_text">#dddddd</color>

    <color name="warning_bar_background_fatal">#f44336</color>
    <color name="warning_bar_text_fatal">@android:color/white</color>
    <color name="warning_bar_background_warning">#ffa726</color>
    <color name="warning_bar_text_warning">@android:color/black</color>
    
    <color name="notification_name_color">@android:color/white</color>

    <color name="button_danger">#f44336</color>

    <color name="pinned_header_text">#a7a7a7</color>

    <color name="alpha_black">#66000000</color>

    <!-- notification LED colors -->
    <color name="blue_light">#33B5E5</color>
    <color name="purple_light">#AA66CC</color>
    <color name="green_light">#99CC00</color>
    <color name="yellow_light">#FFBB33</color>
    <color name="red_light">#FF4444</color>
    <!-- pure white -->

</resources>
